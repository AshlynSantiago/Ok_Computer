@model OBM.Models.Competitor
@{
    ViewBag.Title = Model.CompetitorName;

    if (ViewBag.Access == true)
    {
        <div>
            <h1>@Html.DisplayFor(model => model.CompetitorName)</h1>
            <input id="EventID" type="hidden" value="@Model.EventID" />
            <input id="compID" type="hidden" value="@Model.CompetitorID" />
            <br />
            <div id="matches">
                
                <div class="card text-warning border-warning mb-3">
                    <div class="card-header bg-dark">
                        <h3>Test</h3>
                    </div>
                    <div class="card-body text-white bg-secondary">
                        <h5>1002 1003</h5>
                    </div>
                </div>
            
            </div>
        </div>
    }
    else
    {
        <div class="form-horizontal">
            <h4>Access Denied</h4>
        </div>
    }
}

@section scripts
{
    <script type="text/javascript" src="~/Scripts/competitorMatches.js"></script>
}