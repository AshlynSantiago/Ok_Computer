@model OBM.Models.Competitor
@{
    ViewBag.Title = Model.CompetitorName;
   
    if (ViewBag.Access == true)
    {
        <div>
            <div class="row">
                <div class="col">
                    <h1>@Html.DisplayFor(model => model.CompetitorName)</h1>
                    <input id="EventID" type="hidden" value="@Model.EventID" />
                    <input id="compID" type="hidden" value="@Model.CompetitorID" />
                    <br />
                </div>
                <div class="col">
                    @{
                        var state = "";
                        var col = "";
                        var text = "";
                        if (Model.BusyState == "b".ToString())
                        {
                            col = "danger";
                            state = "b";
                            text = "busy";

                        }
                        else
                        {
                            col = "success";
                            state = "a";
                            text = "available";
                        }


                        Html.AntiForgeryToken();
                        <button id="busyState" type="submit" class="btn btn-outline-@col" value="@state">@text</button>
                        }
                    </div>
            </div>
            <h3>Matches</h3>
            <hr />
            <br />
            <div id="matches">
                <div class="card text-white border-warning mb-3">
                    <div class="card-header bg-success" align="center">
                        <h3>Test</h3>
                    </div>
                    <div class="card-body text-white bg-secondary">
                        <div class="row">
                            <div class="col-sm" align="center">
                                <h6>Competitors</h6>
                                <h3>Comp1</h3>
                                <h3>Comp2</h3>
                            </div>
                            <div class="col-sm" align="center">
                                <h6>Score</h6>
                                <h3>0</h3>
                                <h3>1</h3>
                            </div>
                            <div class="col-sm" align="center">
                                <h6>Round</h6>
                                <h3>1</h3>
                            </div>
                            <div class="col-sm" align="center">
                                <h6>Time</h6>
                                <h3>12:00 pm</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="form-horizontal">
            <h4>Access Denied</h4>
        </div>
    }
}

@section scripts
{
    <script type="text/javascript" src="~/Scripts/competitorMatches.js"></script>
}