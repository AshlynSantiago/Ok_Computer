
@{
    ViewBag.Title = "Search";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

<h2>Search</h2>

<div class="form-group">
    <div class="form-row">
        <label for="inputState">Result Type:</label>
        <select id="inputState" class="form-control-sm">
            <option selected>Tournament</option>
            <option>Event</option>
        </select>
        <label for="inputAddress">Search:</label>
        <input type="text" class="form-control-sm" id="inputAddress" placeholder="Keyword search" value=@ViewBag.search>
    </div>
</div>

<div class="container" id="searchRestults">

</div>

<script src="~/Scripts/Search.js"></script>

